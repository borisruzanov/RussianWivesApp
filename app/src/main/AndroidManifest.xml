<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.borisruzanov.russianwives">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.ui.actions.ActionsActivity"></activity>
        <activity android:name=".mvp.ui.chats.ChatsActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_application_id" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5095813023957397~1146672660" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".mvp.ui.main.MainActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".mvp.ui.rewardvideo.RewardVideoActivity" />
        <activity
            android:name=".mvp.ui.chatmessage.ChatMessageActivity"
            android:parentActivityName=".mvp.ui.main.MainScreenActivity" />
        <activity android:name=".mvp.ui.profilesettings.ProfileSettingsActivity" />
        <activity
            android:name=".mvp.ui.myprofile.MyProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.slider.SliderActivity"
            android:parentActivityName=".mvp.ui.main.MainScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.borisruzanov.russianwives.mvp.ui.main.MainScreenActivity" />
        </activity>
        <activity android:name=".mvp.ui.friendprofile.FriendProfileActivity" />

        <receiver android:name=".widget.ActionWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/action_widget_info" />
        </receiver>

        <service
            android:name=".widget.ActionWidgetService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service android:name=".mvp.model.data.notifications.RwFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id" />

        <activity android:name=".mvp.ui.shop.ServicesActivity" />
        <activity android:name=".mvp.ui.main.MainScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>