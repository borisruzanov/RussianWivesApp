<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filters_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp16">

    <TextView
        style="@style/AppTheme.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:text="@string/header_filters" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gender -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/gender_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/who_are_you_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_gender_ni"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/gender_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/genders" />

            </RelativeLayout>

            <!-- Age types -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/age_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_age_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_age_ni"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/age_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/age_types" />

            </RelativeLayout>

            <!--Countries -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/country_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_country_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_country"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/country_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/countries" />

            </RelativeLayout>

            <!-- Relationship statuses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/relationship_status_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_relationships_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_relationship_statuses"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/relationship_status_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/relationships_statuses" />

            </RelativeLayout>

            <!-- Body types -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/body_type_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_bodytype_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_body_types"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/body_type_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/body_types" />

            </RelativeLayout>

            <!-- Ethnicity -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ethnicity_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_ethnicity_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_ethnicities"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/ethnicity_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/ethnicities" />
            </RelativeLayout>

            <!-- Faith types -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/faith_type_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_faith_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_faith_types"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/faith_type_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/faith_types" />
            </RelativeLayout>

            <!-- Smoke statuses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/smoke_status_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_smoke_status_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_smoke_statuses"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/smoke_status_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/smoke_statuses" />
            </RelativeLayout>

            <!-- Drink statuses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/drink_status_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/what_drink_status_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_drink_statuses"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/drink_status_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/drink_statuses" />
            </RelativeLayout>

            <!-- Have kids statuses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/have_kids_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/looking_for_kids"/>

                <Spinner
                    android:id="@+id/spinner_have_kids_statuses"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/have_kids_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/have_kids_statuses" />
            </RelativeLayout>

            <!-- Want kids statuses -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/want_kids_text"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    android:text="@string/willing_kids_status_looking_for"/>

                <Spinner
                    android:id="@+id/spinner_want_kids_statuses"
                    style="@style/AppTheme.FilterSpinner"
                    android:layout_below="@+id/want_kids_text"
                    android:layout_centerVertical="true"
                    android:entries="@array/have_kids_statuses" />
            </RelativeLayout>

            <!-- Cancel and apply buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button_cancel"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textColor="@color/greySecondary"
                    android:theme="@style/ThemeOverlay.FilterButton" />


                <Button
                    android:id="@+id/button_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/apply"
                    android:theme="@style/ThemeOverlay.FilterButton" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
